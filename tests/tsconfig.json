{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2016",
    "noImplicitAny": false,
    "sourceMap": false,
    "declaration": false,
    "rootDir": "./src",
    "outDir": "./out",
    "strict": true,
    "moduleResolution": "node",
    "removeComments": true,
    "preserveConstEnums": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
